<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/tasklist_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTaskList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/bettermilk"
        android:text="Task Manager"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Task"
            android:fontFamily="@font/yangbagus"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnSpeakTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤"
            android:backgroundTint="@color/light_brown"
            android:textColor="@color/dark_brown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Notes"
            android:fontFamily="@font/yangbagus"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/edit_text_background" />

        <Button
            android:id="@+id/btnSpeakNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤"
            android:backgroundTint="@color/light_brown"
            android:textColor="@color/dark_brown" />
    </LinearLayout>

    <EditText
        android:id="@+id/etDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Deadline"
        android:fontFamily="@font/yangbagus"
        android:inputType="date"
        android:padding="12dp"
        android:background="@drawable/edit_text_background" />

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/yangbagus"
        android:text="Add Task" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_brown"
        android:textColor="@color/dark_brown"
        android:fontFamily="@font/yangbagus"
        android:text="Back" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/yangbagus"
        android:text="Location: "
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/location_box_background"
        android:gravity="center"
        android:textColor="@color/dark_brown" />

    <ListView
        android:id="@+id/lvTaskList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>